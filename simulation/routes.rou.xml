<routes>
    <vType id="car" accel="1.0" decel="4.5" length="5.0" maxSpeed="70.0" sigma="0.5"/>
    <vType id="bus" accel="0.8" decel="3.5" length="12.0" maxSpeed="15.0" guiShape="bus" color="yellow"/>
    <vType id="truck" accel="0.6" decel="3.0" length="15.0" maxSpeed="18.0" guiShape="truck" color="blue"/>
    <vType id="ambulance" accel="2.5" decel="4.5" length="7.0" maxSpeed="90.0" guiShape="emergency" color="red"/>

    <route id="route_n_s" edges="edge_north_in edge_south_out"/>
    <route id="route_s_n" edges="edge_south_in edge_north_out"/>
    <route id="route_e_w" edges="edge_east_in edge_west_out"/>
    <route id="route_w_e" edges="edge_west_in edge_east_out"/>

    <flow id="flow_n_s" type="car" begin="0" end="3600" vehsPerHour="500" route="route_n_s" departLane="best"/>
    <flow id="flow_e_w" type="car" begin="0" end="3600" vehsPerHour="400" route="route_e_w" departLane="best"/>
    <flow id="flow_s_n" type="car" begin="100" end="3600" vehsPerHour="300" route="route_s_n" departLane="best"/>

    <flow id="truck_flow" type="truck" begin="50" end="3600" period="120" route="route_e_w" departLane="0"/>

    <flow id="bus_flow" type="bus" begin="0" end="3600" period="300" route="route_n_s" departLane="0"/>

    <vehicle id="amb_1" type="ambulance" depart="200" route="route_w_e" departSpeed="max"/>
    <vehicle id="amb_2" type="ambulance" depart="800" route="route_n_s" departSpeed="max"/>
</routes>
